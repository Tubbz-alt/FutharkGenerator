{
	"name": "acwpd/futhark-generator",
	"description": "This is a PHP fork of the Futhark generator for Worm.",
	"type": "project",
	"license": "MIT",
	"minimum-stability": "stable",
	"require": {
		"PHP": "^7.0",
		"altorouter/altorouter": "^1.2",
		"acwpd/helpers": "@dev",
		"kreait/firebase-php": "3.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.0"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/farfromunique/Helpers.git"
		}
	],
	"authors": [
		{
			"name": "Aaron C",
			"email": "git@acwpd.com"
		}
	],
	"config": {
		"vendor-dir": "protected/vendor"
	},
	"autoload": {
		"psr-4": {
			"ACWPD\\Futhark\\": "protected/classes/"
		}
	},
	"scripts":{
		"serve": "php -S localhost:800 -t public/",
		"nfsn-install":[
			"ls /home/protected | xargs rm -rf",
			"ls /home/public | xargs rm -rf",
			"php composer.phar install --no-dev",
			"cd protected/",
			"mv protected/*.* ../../protected/",
			"mv protected/classes ../../protected/",
			"mv protected/templates ../../protected/",
			"mv protected/vendor ../../protected/",
			"mv private/*.* ../../private",
			"mv private/css ../../private",
			"mv private/img ../../private",
			"mv private/js ../../private",
			"rm -rf public/",
			"ls | grep -v composer.phar | xargs rm -rf"
		]
	}
}
